---
import PortfoloLayout from '../../layouts/PortfolioLayout.astro';
import { Fragment } from 'astro/jsx-runtime';

---

<PortfoloLayout title="Welcome to Astro.">
	<Fragment slot="description">
		<div class="flex flex-col p-2 gap-2">
			<h1 class="font-bold text-xl">Simulytics</h1>
			<p>A Modeling/Analysis dashboard, applicable to many tools and industries.</p>
		</div>
	</Fragment>
	<div class="grid grid-cols-2 w-full overflow-x-hidden">
		<img  class="h-96" src="/images/simulytics/simulytics1.png" alt="Logo" class="w-32 h-auto" />
		<img  class="h-96" src="/images/simulytics/simulytics2.png" alt="Logo" class="w-32 h-auto" />
	</div>
</PortfoloLayout>