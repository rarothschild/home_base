---
// src/pages/apod.astro
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import JWST_Pic from '../images/JWST_GroupPicture.jpg';

// Fetch the APOD data
import data from '../data/apod.json';
console.log(data)
---

<Layout title="Home">
	<div class="flex flex-col p-2 gap-2 divide-y-2 divide-zinc-400">
		<div class="flex gap-4 p-2 place-items-center">
			<div class="flex flex-col gap-3 w-1/2 p-4 text-center">
				<h3 class="font-bold text-2xl">Welcome to my portfolio website</h3>
				<p class="self-center">I am a Systems/Software engineer currently based out of San Luis Obpispo CA. My passion has always been for space and contributing to humanity's relentless charge of discovery.</p>
			</div>
			<div class="w-1/2">
				<Image class="shadow-xl shadow-zinc-600" src={JWST_Pic} alt="A bird sitting on a nest of eggs." />
			</div>
		</div>
		<div class="flex gap-4 p-2 flex-col md:flex-row place-items-center">
			<div class="shadow-xl shadow-zinc-600">
				{data.media_type === 'image' ? (
					<img src={data.url} alt={data.title} class=" max-w-sm" />
				) : (
					<iframe
					src={data.url}
					title={data.title}
					class="max-w-40 max-h-40"
					></iframe>
				)}
			</div>
			<div class="flex flex-col gap-1 ">
				<p class="font-bold text-2xl">NASA's Astronomy Picture of the Day</p>
				<h2>{data.date} - {data.title} </h2>
				<p>{data.explanation}</p>
			</div>
		</div>
	</div>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
		border-radius: 8px;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>
