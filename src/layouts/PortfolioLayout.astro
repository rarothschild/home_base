---
import Layout from '../layouts/Layout.astro';
const currentPath = Astro.url.pathname;

interface Props {
    title: string;
    webLink?: string;
    githubLink?: string;
}

const { title, webLink, githubLink } = Astro.props;

const portfolio_links = [
  { href: '/portfolio/base_defender', label: 'Base Defender [C++ Game]' },
  { href: '/portfolio/simulytics', label: 'Simulytics [Django/SvelteKit]' },
  { href: '/portfolio/test_interface', label: 'Test/FEA Interface [MATLAB]' },
  { href: '/portfolio/stock_trading', label: 'Stock Trading [Python]' },
  { href: '/portfolio/londonderry_quarry', label: 'Londonderry Quarry [JS/Astro Site]' },
];

---

<Layout title={title}>
	<div class="flex flex-col w-full h-full p-2">
		<div class="grid grid-cols-3 items-center mb-2 border-b pb-2">
            <a
                href='/portfolio'
                class="justify-self-start inline-flex items-center rounded-md bg-orange-400 px-3 py-1 text-sm font-semibold text-black hover:bg-orange-300 transition-colors"
            >
                <span class="mr-1">&larr;</span>
                Back
            </a>
            
            <h1 class="font-bold text-3xl justify-self-center text-center">{title}</h1>

            <div class="flex items-center gap-3 justify-self-end">
                {webLink && (
                    <a
                        href={webLink}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center rounded-md bg-orange-400 px-3 py-1 text-sm font-semibold text-black hover:bg-orange-300 transition-colors gap-1"
                    >
                        <span>Visit Website</span>
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
                        </svg>
                    </a>
                )}
                {githubLink && (
                    <a
                        href={githubLink}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center rounded-md bg-orange-400 px-3 py-1 text-sm font-semibold text-black hover:bg-orange-300 transition-colors gap-1"
                    >
                        <span>GitHub</span>
                        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" class="w-4 h-4">
                            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                        </svg>
                    </a>
                )}
            </div>
        </div>
        <main class="w-full h-full p-2">
            <slot />
        </main>
	</div>
</Layout>